
= form_for video do |f|
  .row
    .col.m6
      .field
        = f.label :youtube_id
        = f.text_field :youtube_id
      .field
        = f.label :name
        = f.text_field :name
      .field
        = f.label :descr
        = f.text_area :descr
    .col.m6
      .field
        = f.label :video
        = f.file_field :video
      .field
        = f.label :thumb
        = f.file_field :thumb
  .row
    .col.s3
      = f.label :premium_tier
      = f.number_field :premium_tier
    .col.s3
      = f.label :user_profile
      = f.select :user_profile_id, @user_profiles_list
  .row
    .col-md-6
      = render 'ish_manager/application/form_nonpublic', f: f, model: video
    .col-md-6
      = f.check_box :is_trash
      = f.label :is_trash

  .action
    = f.submit

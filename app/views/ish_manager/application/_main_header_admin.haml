

.application--main-header-admin.main-header{ class: "#{ENV['RAILS_ENV']} #{ENV['RAILS_ENV'][0...3]=="dev" ? "development" : ''}" }
  %i.fa.fa-compress.collapse-expand#collapseHeaderMain
    Piousbox Suite
  .container

    %i.fa.fa-compress.collapse-expand#collapseHeaderPiCMS
      PiousboxCMS
    .a
      %ul
        %li
          = render 'ish_manager/galleries/menu'
        %li
          = link_to 'Reports',   reports_path
          .inline-search
            = form_tag reports_path, method: :get do
              = text_field_tag :q
          = link_to '[+]', new_report_path
        %li
          = link_to 'Videos',    videos_path
          .inline-search
            = form_tag videos_path, method: :get do
              = text_field_tag :q
          = link_to '[+]', new_video_path
        %li= link_to 'Categories & Tags', categories_path
      %ul
        %li= link_to '+Newsitem', new_newsitem_path
        %li
          = link_to 'Profiles',  user_profiles_path
          .inline-search
            = form_tag user_profiles_path, method: :get do
              = text_field_tag :q

        %li
          = link_to 'Locations', maps_path
          .inline-search
            = form_tag maps_path, method: :get do
              = text_field_tag :q
          = link_to '[+]', new_map_path

        %li
          = link_to 'Events', events_path
          .inline-search
            = form_tag events_path, method: :get do
              = text_field_tag :q
          = link_to '[+]', new_event_path
    .c

    %i.fa.fa-compress.collapse-expand#collapseHeaderOffice
      PiousboxCRM
    .a
      %ul
        %li
          .chip
            = link_to "#{WpTag::INBOX} (#{Office::EmailConversation.in_emailtag(WpTag::INBOX).length})", email_conversations_in_path(WpTag::INBOX)
          = link_to '[+]', new_email_context_path
        %li
          = link_to "Tmpls (#{Ish::EmailTemplate.all.count})", email_templates_path
          = link_to '[+]', new_email_template_path
        %li
          = link_to "Co's (#{Leadset.kept.length})", leadsets_path
          = link_to '[+]', new_leadset_path


        %li
          = link_to "EActions (#{Office::EmailAction.count})", email_actions_path
          = link_to '[+]', new_email_action_path
      %ul
        %li
          = link_to "Filters (#{Office::EmailFilter.active.length})", email_filters_path
          = link_to '[+]', new_email_filter_path
        %li
          = link_to "Ctxs (#{Ctx.notsent.length})", notsent_email_contexts_path
          = link_to '[+]', new_email_context_path
          = link_to '[csv]', email_contexts_summary_path( format: :csv )

        %li
          = link_to "Leads (#{Lead.kept.length})", leads_path
          = link_to '[+]', new_lead_path
        %li
          = link_to "Schs (#{Sch.active.length})", scheduled_email_actions_path
          = link_to '[+]', new_scheduled_email_action_path

      %ul
        %li &nbsp;
        %li &nbsp;
        %li
          = link_to "Campaigns (#{Ish::EmailCampaign.count})", email_campaigns_path
          = link_to '[+]', new_email_campaign_path
        %li
          = link_to "OActions (#{Office::Action.count})", office_actions_path
          = link_to '[+]', new_office_action_path

    .c

    %i.fa.fa-compress.collapse-expand#collapseHeaderIro
      Iro Wor
    .a
      %ul
        %li
          %span.label Purses:
          - Iro::Purse.all.map do |p|
            = link_to "[#{p.id}]", iro_purse_path(p)
            = link_to "[gui]", iro_purse_gameui_path(p)
          = link_to '[+]', new_iro_purse_path
        %li
          = link_to 'Watches', iro_watches_path
        %li
          = link_to 'Plots', 'http://localhost:3000/iron_warbler/NOPE-1', target: '_blank'
    .c

